    <div class="calendarForm">
        <form method="get">
            <div class="cal-ev">
                <div class="cal-bl">
                    <label>Год</label>
                    <br>
                    <select name="y">
                        <option value="0">(Все)</option>
                        {% for y in 2013..date()|date('Y') + 1 %}
                        <option value="{{ y }}"{% if y == year %} selected="selected"{% endif %}>{{ y }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="cal-bl">
                    <label>Месяц</label>
                    <br>
                    <select name="m">
                        <option value="0">(Все)</option>
                        {% for m in months %}
                        <option value="{{ loop.index }}"{% if loop.index == month %} selected="selected"{% endif %}>{{ m }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="cal-bl">
                    <label>Категория</label>
                    <br>
                    <select name="category">
                        <option value="0">(Все)</option>
                        {% for c in categories %}
                            <option value="{{ c.id }}"{% if c.id == category %} selected="selected"{% endif %}>{{ c.title }}</option>
                        {% endfor %}
                    </select>
                </div>
		<div class="cal-bl">
                    <label>Место:</label>
                    <br>
                    <select class="slc" name="location">
                        <option value="0">(Все)</option>
                        {% for tag in tags %}
                            <option value="{{ tag.id }}"{% if tag.id == location %} selected="selected"{% endif %}>{{ tag.title }}</option>
                        {% endfor %}
                    </select>
                </div>
		<div class="cal-bl" style="margin-top: 13px;">
                    <input class="btnCalendar" type="submit" value="Поиск">
                </div>
            </div>
            <div style="clear:both;"></div>
            <div>

            </div>
        </form>
    </div>
    <div style="clear:both;"></div>


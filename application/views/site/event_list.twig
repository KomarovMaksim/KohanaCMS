    {% if events|length > 0 %}
        <h1>События</h1>

        <div class="portlet_4">
            <link type="text/css" href="/assets/site/eot/eventsSearch.css" rel="stylesheet">
            <table class="resultTable" cellpadding="0" cellspacing="0">
                <tbody>
                <tr>
                </tr>
                <tr>
                    <td class="resultList">
                        {% for event in events %}
                            <div class="row2">
                                <table cellspacing="0" cellpadding="0">
                                    <tbody>
                                    <tr>
                                        <td class="imgTd">
                                            {% if event.image %}
                                            <a itemprop="url" href="{{ event.get_url() }}">
                                                <img height="60px" width="85px" title="{{ event.title }}" alt="{{ event.title }}" itemprop="image" src="{{ event.image }}"></a>
                                        </td>    {% else %}
                                            <a itemprop="url" href="{{ event.get_url() }}">
                                                <img height="60px" width="85px" title="{{ event.title }}" alt="{{ event.title }}" itemprop="image" src="{{ event.image }}"></a>
                                            </td>
                                        {% endif %}
                                        <td class="textTd">
                                            <a itemprop="url" class="resultItem" href="{{ event.get_url() }}">
                                                <span itemprop="name">{{ event.date|date('d.m.Y') }}&nbsp;&nbsp;{{ event.title }}</span></a><br>
                                            <br>
                                            <span itemprop="description" class="event_body">{{ event.short_text }}</span></td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        {% endfor %}


                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endif %}



